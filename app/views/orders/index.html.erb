<% content_for :title, 'Orders' %>
<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table id="orders" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Trade</th>
      <th>Name</th>

      <th></th>      

      <th>Qty</th>
      <th>Price</th>
      <th>Amount</th> 
      <th>Active</th>
      <th>Reason</th> 
      <th>Market</th>

      <th></th>
      <th></th>  
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= trade_desc(order.trade) %></td>
        <td><%= order.name %></td>
        <td><%= link_to_icon 'Edit', edit_order_path(order) %></td>   

        <td><%= number_with_delimiter(order.qty, delimiter: ",") %></td>
        <td><%= number_with_precision(order.price, precision: 2) %></td>
        <td><%= number_with_precision(order.price * order.qty, precision: 2, delimiter: ",") %></td>
        <td><%= order.active %></td>
        <td><%= order.reason %></td>
        <td><%= order.market %></td>
        <td><%= link_to_icon 'Show', order %></td>
        <td><%= link_to_icon 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
