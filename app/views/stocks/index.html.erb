<% content_for :title, 'Stocks' %>

<div class ="page-header text-center" > 
  <%= link_to 'New Stock', new_stock_path,
  :class => "btn btn-success pull-right"  %>
  <h1>Stocks</h1>
</div>

<table id="stocks" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>  
      <th>Market</th>  
      <th></th>
      <th>Buy Spd</th>
      <th>Sell Spd</th>
      <th>Diff Spd</th>      
      <th>Max Price</th>  
      <th>Min Price</th> 
      <th>Sts</th>
      <th>Qty</th>
      <th>Available</th>      
      <th>Buy Tgt</th>
      <th>Cost</th>       
      <th>Sell Tgt</th>
      <th>Volume</th>      
      <th>Beta</th>  
      <th>Reason</th>  

      <th></th>
      <th></th>   

    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.market %></td>
        <td><%= link_to_icon 'Edit', edit_stock_path(stock) %></td>   
        <td><%= stock.buy_spread %></td>
        <td><%= stock.sell_spread %></td>
        <td><%= stock.sell_spread + stock.buy_spread %></td>        
        <td><%= number_with_precision(stock.max_price, precision: 2) %></td>
        <td><%= number_with_precision(stock.min_price, precision: 2) %></td>
        <td><%= status_desc(stock.status) %></td>
        <td><%= number_with_delimiter(stock.qty, delimiter: ",") %></td>
        <td><%= number_with_delimiter(stock.available_qty, delimiter: ",") %></td>        
        <td><%= number_with_precision(stock.buy_target, precision: 2) %></td>
        <td><%= number_with_precision(stock.cost, precision: 2) %></td>        
        <td><%= number_with_precision(stock.sell_target, precision: 2) %></td>
        <td><%= number_with_precision(stock.volume, precision: 2) %></td>
        <td><%= number_with_precision(stock.beta, precision: 2) %></td>
        <td><%= stock.reason %></td>
        <td><%= link_to_icon 'Show', stock %></td>
        <td><%= link_to_icon 'Destroy', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>